{
  "name": "svite-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/playground/*",
    "packages/templates/*"
  ],
  "scripts": {
    "lint": "run-p lint:script lint:style",
    "test": "run-s test:serve test:build",
    "test:serve": "jest",
    "test:serve:debug": "cross-env VITE_DEBUG_SERVE=1 node --inspect-brk ./node_modules/.bin/jest",
    "test:build": "cross-env VITE_TEST_BUILD=1 jest",
    "test:build:debug": "cross-env VITE_TEST_BUILD=1 VITE_PRESERVE_BUILD_ARTIFACTS=1 node --inspect-brk ./node_modules/.bin/jest",
    "test:ci": "run-s test:ci:serve test:ci:build",
    "test:ci:serve": "cross-env VITE_PRESERVE_BUILD_ARTIFACTS=1 jest --verbose --no-cache --runInBand --force-exit --ci --json --outputFile=\"temp/serve/jest-results.json\" ",
    "test:ci:build": "cross-env VITE_TEST_BUILD=1 VITE_PRESERVE_BUILD_ARTIFACTS=1 jest --verbose --no-cache --runInBand --force-exit --ci --json --outputFile=\"temp/build/jest-results.json\"",
    "build:ci": "pnpm -r build-bundle --filter=\\!./packages/playground",
    "build": "pnpm -r build --filter=\\!./packages/playground",
    "build:svite": "pnpm --dir packages/svite build",
    "lint:script": "eslint --ignore-path .gitignore '**/*.{js,ts,svelte,html,svx,md}'",
    "lint:style": "stylelint --ignore-path .gitignore '**/*.{css,scss,svelte,html,js,ts,svx,md}'",
    "lint:fix": "run-s lint:fix:script lint:fix:style",
    "lint:fix:script": "pnpm lint:script -- --fix",
    "lint:fix:style": "pnpm lint:style -- --fix",
    "format": "prettier --ignore-path .gitignore '**/*.{css,scss,svelte,html,js,ts,svx,md}' --check",
    "format:fix": "pnpm format -- --write",
    "fixup": "run-s lint:fix format:fix",
    "update-deps": "ncu -u",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@microsoft/api-extractor": "^7.18.4",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.3",
    "@types/semver": "^7.3.8",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "chalk": "^4.1.1",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "enquirer": "^2.3.6",
    "esbuild": "^0.12.16",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-markdown": "^2.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "jest-environment-node": "^27.0.6",
    "jest-junit": "^12.2.0",
    "lint-staged": "^11.1.1",
    "minimist": "^1.2.5",
    "node-fetch": "^2.6.1",
    "npm-check-updates": "^11.8.3",
    "npm-run-all": "^4.1.5",
    "playwright-core": "^1.13.0",
    "pnpm": "^6.10.3",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "sirv": "^1.0.12",
    "slash": "^4.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^5.0.0",
    "svelte": "^3.41.0",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5",
    "vite": "^2.4.4"
  },
  "lint-staged": {
    "*.{js,ts,svelte,html,md,svx}": "eslint --fix",
    "*.{css,scss,svelte,html,js,ts,svx,md}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "pnpm": ">=6",
    "yarn": "forbidden, use pnpm",
    "npm": "forbidden, use pnpm"
  }
}
