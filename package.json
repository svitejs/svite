{
  "name": "svite-monorepo",
  "private": true,
  "scripts": {
    "lint": "run-p lint:script lint:style",
    "test": "run-s test:serve test:build",
    "test:serve": "jest",
    "test:serve:debug": "cross-env VITE_DEBUG_SERVE=1 node --inspect-brk ./node_modules/.bin/jest",
    "test:build": "cross-env VITE_TEST_BUILD=1 jest",
    "test:build:debug": "cross-env VITE_TEST_BUILD=1 VITE_PRESERVE_BUILD_ARTIFACTS=1 node --inspect-brk ./node_modules/.bin/jest",
    "test:ci": "run-s test:ci:serve test:ci:build",
    "test:ci:serve": "cross-env VITE_PRESERVE_BUILD_ARTIFACTS=1 jest --verbose --no-cache --runInBand --force-exit --ci --json --outputFile=\"temp/serve/jest-results.json\" ",
    "test:ci:build": "cross-env VITE_TEST_BUILD=1 VITE_PRESERVE_BUILD_ARTIFACTS=1 jest --verbose --no-cache --runInBand --force-exit --ci --json --outputFile=\"temp/build/jest-results.json\"",
    "build:ci": "pnpm -r build-bundle --filter=\\!./packages/playground",
    "build": "pnpm -r build --filter=\\!./packages/playground",
    "build:svite": "pnpm --dir packages/svite build",
    "lint:script": "eslint --ignore-path .gitignore '**/*.{js,ts,svelte,html,svx,md}'",
    "lint:style": "stylelint --ignore-path .gitignore '**/*.{css,scss,html}'",
    "lint:fix": "run-s lint:fix:script lint:fix:style",
    "lint:fix:script": "pnpm lint:script -- --fix",
    "lint:fix:style": "pnpm lint:style -- --fix",
    "format": "prettier --check --ignore-path .prettierignore '**/*.{css,scss,svelte,html,js,ts,svx,md}'",
    "format:fix": "pnpm format -- --write",
    "fixup": "run-s lint:fix format:fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@microsoft/api-extractor": "^7.19.3",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.18",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "chalk": "^4.1.2",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "enquirer": "^2.3.6",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-environment-node": "^27.4.4",
    "jest-junit": "^13.0.0",
    "lint-staged": "^12.1.5",
    "minimist": "^1.2.5",
    "node-fetch": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "playwright-core": "^1.17.1",
    "pnpm": "^6.23.2",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "sirv": "^2.0.0",
    "slash": "^4.0.0",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^6.0.0",
    "svelte": "^3.44.3",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4",
    "vite": "^2.7.10"
  },
  "lint-staged": {
    "*.{js,ts,svelte,html,md,svx}": "eslint --fix",
    "*.{css,scss,html}": "stylelint --fix",
    "*.{css,scss,svelte,html,js,ts,svx,md}": "prettier --write --ignore-path .prettierignore"
  },
  "engines": {
    "pnpm": ">=6",
    "yarn": "forbidden, use pnpm",
    "npm": "forbidden, use pnpm"
  },
  "pnpm": {
    "overrides": {
      "validator@<13.7.0": ">=13.7.0",
      "semver-regex@<3.1.3": ">=3.1.3",
      "trim-newlines@<3.0.1": ">=3.0.1"
    }
  }
}
