{
  "name": "svite-monorepo",
  "private": true,
  "scripts": {
    "lint": "run-p lint:script lint:style",
    "test": "run-s test:serve test:build",
    "test:serve": "jest",
    "test:serve:debug": "cross-env VITE_DEBUG_SERVE=1 node --inspect-brk ./node_modules/.bin/jest",
    "test:build": "cross-env VITE_TEST_BUILD=1 jest",
    "test:build:debug": "cross-env VITE_TEST_BUILD=1 VITE_PRESERVE_BUILD_ARTIFACTS=1 node --inspect-brk ./node_modules/.bin/jest",
    "test:ci": "run-s test:ci:serve test:ci:build",
    "test:ci:serve": "cross-env VITE_PRESERVE_BUILD_ARTIFACTS=1 jest --verbose --no-cache --runInBand --force-exit --ci --json --outputFile=\"temp/serve/jest-results.json\" ",
    "test:ci:build": "cross-env VITE_TEST_BUILD=1 VITE_PRESERVE_BUILD_ARTIFACTS=1 jest --verbose --no-cache --runInBand --force-exit --ci --json --outputFile=\"temp/build/jest-results.json\"",
    "build:ci": "pnpm -r build-bundle --filter=\\!./packages/playground",
    "build": "pnpm -r build --filter=\\!./packages/playground",
    "build:svite": "pnpm --dir packages/svite build",
    "lint:script": "eslint --ignore-path .gitignore '**/*.{js,ts,svelte,html,svx,md}'",
    "lint:style": "stylelint --ignore-path .gitignore '**/*.{css,scss,svelte,html}'",
    "lint:fix": "run-s lint:fix:script lint:fix:style",
    "lint:fix:script": "pnpm lint:script -- --fix",
    "lint:fix:style": "pnpm lint:style -- --fix",
    "format": "prettier --ignore-path .gitignore '**/*.{css,scss,svelte,html,js,ts,svx,md}' --check",
    "format:fix": "pnpm format -- --write",
    "fixup": "run-s lint:fix format:fix",
    "update-deps": "ncu -u",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@microsoft/api-extractor": "^7.18.17",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "chalk": "^4.1.2",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "enquirer": "^2.3.6",
    "esbuild": "^0.13.11",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-environment-node": "^27.3.1",
    "jest-junit": "^13.0.0",
    "lint-staged": "^11.2.6",
    "minimist": "^1.2.5",
    "node-fetch": "^2.6.5",
    "npm-check-updates": "^11.8.5",
    "npm-run-all": "^4.1.5",
    "playwright-core": "^1.16.2",
    "pnpm": "^6.19.1",
    "postcss-html": "^1.2.0",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "sirv": "^1.0.18",
    "slash": "^4.0.0",
    "stylelint": "^14.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^6.0.0",
    "svelte": "^3.44.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "vite": "^2.6.13"
  },
  "lint-staged": {
    "*.{js,ts,svelte,html,md,svx}": "eslint --fix",
    "*.{css,scss,svelte,html}": "stylelint --fix",
    "*.{css,scss,svelte,html,js,ts,svx,md}": "prettier --write"
  },
  "engines": {
    "pnpm": ">=6",
    "yarn": "forbidden, use pnpm",
    "npm": "forbidden, use pnpm"
  },
  "pnpm": {
    "overrides": {
      "//tar@6": "see https://npmjs.com/advisories/1770 and https://npmjs.com/advisories/1771",
      "tar@6": "^6.1.2",
      "//trim-newlines": "see https://npmjs.com/advisories/1753",
      "trim-newlines@<=3": "^3.0.1"
    }
  }
}
