{
  "name": "svite",
  "version": "0.11.0",
  "license": "MIT",
  "author": "dominikg",
  "bin": {
    "svite": "bin/svite.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "index.d.ts"
  ],
  "scripts": {
    "dev": "pnpm run build:ci -- --watch src",
    "build:ci": "rimraf dist && tsup-node src/index.ts src/cli/svite.ts --format cjs --no-splitting",
    "build": "pnpm run build:ci -- --dts --sourcemap",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s --commit-path . --lerna-package svite",
    "release": "node ../../scripts/release.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svitejs/svite.git"
  },
  "keywords": [
    "svelte",
    "svite",
    "vite"
  ],
  "bugs": {
    "url": "https://github.com/svitejs/svite/issues"
  },
  "homepage": "https://github.com/svitejs/svite/tree/main/packages/svite#readme",
  "dependencies": {
    "cac": "^6.7.12",
    "chalk": "^4.1.2",
    "degit": "2.8.4"
  },
  "devDependencies": {
    "@types/node": "^16.11.31",
    "tsup": "^5.12.6"
  }
}
